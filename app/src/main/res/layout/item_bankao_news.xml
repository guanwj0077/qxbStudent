<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="bankao"
            type="com.qxb.student.common.module.bean.Bankao" />
    </data>

    <RelativeLayout
        android:id="@+id/rl_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/px_30">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/px_140"
            android:layout_height="@dimen/px_140"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_20"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_15"
            android:layout_toRightOf="@+id/imageView"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{bankao.title}"
            android:textColor="@android:color/black"
            android:textSize="@dimen/px_30" />

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="@dimen/px_12"
            android:layout_toRightOf="@+id/imageView"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{bankao.intro}"
            android:textColor="@color/colorDesc"
            android:textSize="@dimen/px_25" />
    </RelativeLayout>
</layout>