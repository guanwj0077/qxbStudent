<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View"/>

        <variable
            name="mineData"
            type="com.qxb.student.common.module.bean.MineData"/>

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="?attr/selectableItemBackground"
                  android:gravity="center_vertical"
                  android:orientation="vertical"
                  android:visibility="@{mineData.show? View.VISIBLE:View.GONE}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/px_40">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                ImageResource="@{mineData.draw_id}"
                android:layout_marginStart="@dimen/px_20"
                android:contentDescription="@string/app_name"
               />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/px_35"
                android:layout_weight="2.0"
                android:gravity="center_vertical"
                android:text="@{mineData.name}"
                android:textColor="@color/colorDesc"
                android:textSize="@dimen/px_45"/>

            <TextView
                android:id="@+id/tv_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/px_30"
                android:layout_marginStart="@dimen/px_20"
                android:textColor="@color/colorDesc"
                android:textSize="@dimen/px_45"/>

            <ImageView
                android:id="@+id/iv_card_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"
                android:gravity="right"
                android:layout_marginEnd="@dimen/px_20"
                android:src="@mipmap/arrow_right"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"
            android:background="@color/tv_line_color"/>

        <View

            android:layout_width="match_parent"
            android:layout_height="@dimen/px_18"
            android:background="@color/tv_line_color"
            android:visibility="@{mineData.view?View.VISIBLE:View.GONE}"/>


    </LinearLayout>
</layout>